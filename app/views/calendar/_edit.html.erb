<div class="close-action"><a href="javascript:$('.edit-popup').hide();$('#edit-container').hide();">x</a></div>
<h3>Edit <%= event.class.name %> for <%= date %></h3>

<%= form_tag(calendar_update_path(), :method => :post) do %>
  <%= hidden_field_tag "event_id", event.id %>

  <div class="field">
    Title<br>
    <%= text_field_tag :title, event.title %>
  </div>
  <div class="field">
    Description<br>
    <%= text_area_tag :description, event.description %>
  </div>
  <div class="field">
    Date<br>
    <%= date_select :date, :part, selected: event.start_at %>
  </div>
  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>