<div class="ibox">
  <div class="ibox-title">
    <div class="close-action"><a href="javascript:$('.edit-popup').hide();$('#edit-container').hide();">&#xf00d;</a></div>
    <h5>Changes for <%= !event.recurrence.nil? && event.recurrence.event_count > 1 ? "#{event.recurrence.event_count} #{event.plural_name}" : event.display_name %> for <%= Date.parse(date).strftime("%A, %B %e") %></h5>
  </div>
  <div class="ibox-content">
  <%= form_tag(calendar_update_path(), :method => :post, class: "form") do %>
    <%= hidden_field_tag "event_id", event.id %>
    <div class="form-group">
      <label>Comments</label>
      <%= text_area_tag :description, event.description, class: "form-control" %>
    </div>
    <div class="form-group">
      <button type="submit" class="complete-button btn btn-primary" style="float:left;">
        Save Changes
      </button>
      <div class="remove-button btn btn-primary" style="float:right;"><%= link_to "Uncomplete", calendar_remove_path(:event_id => event.id) %></div>
      <div style="clear:both;"></div>
    </div>
  <% end %>
  </div>
</div>