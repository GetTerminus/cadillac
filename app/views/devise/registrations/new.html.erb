<div class="ibox signin-container">
  <div class="ibox-title">
    <h4>Sign up</h4>
  </div>
  <div class="ibox-content">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form") do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group"><%= f.label :company %><br />
      <%= text_field_tag :company, nil, class: "form-control" %></div>

      <div class="form-group"><%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control" %></div>

      <div class="form-group"><%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>

      <div class="form-group"><%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></div>

      <div class="form-group"><%= f.submit "Sign up", class: "btn btn-sm btn-primary" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
